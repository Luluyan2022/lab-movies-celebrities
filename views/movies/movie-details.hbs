<section class="movie-details">
    <h2>{{title}}</h2>
    <p>
        Genre: {{genre}} <br />
        Plot: {{plot}} <br />
    </p>
    <h4>Cast:</h4>
   {{#each cast}}
<p>Name:
{{this.name}} <br />
Occupation: {{this.occupation}} <br />
CatchPhrase: {{this.catchPhrase}}
</p>
{{/each}}

    <p>
        <form action="/movies/{{_id}}/delete" method="POST">
            <button>Delete</button>
        </form>
    </p>
</section>

<a href="/movies">Back</a>